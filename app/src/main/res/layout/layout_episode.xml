<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imgEpisodePoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            tools:text="1. Simpsons Roasting on an Open Fire"
            android:textColor="@color/white"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="16sp"
            android:id="@+id/txtEpisodeName"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtEpisodeRuntime"
            tools:text="23 min"
            android:textColor="@color/text_grey"
            android:fontFamily="@font/cabin"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:id="@+id/txtOverview"
        android:fontFamily="@font/cabin"
        android:textColor="#BCBBBB"
        tools:text="After Peter heavily drinks at a bachelor party, even though he told Lois he would not, he gets fired from his job at the Happy-go-Lucky toy factory for being hung over. Peter soon applies for welfare, but after a mix-up, gets sent a check for $150,000. Eventually, Lois finds out, and Peter decides to return the money by dumping it from a blimp at the Super Bowl. He is arrested as a result, and his family ends up coming to his rescue."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>