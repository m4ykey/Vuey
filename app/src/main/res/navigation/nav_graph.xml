<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/albumFragment">

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.example.vuey.ui.screens.album.AlbumFragment"
        android:label="fragment_album"
        tools:layout="@layout/fragment_album" >
        <action
            android:id="@+id/action_albumFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_albumFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="com.example.vuey.ui.screens.album.DetailAlbumFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_album_detail">
        <argument
            android:name="album"
            app:argType="com.example.vuey.data.local.album.search.Album" />
        <argument
            android:name="albumEntity"
            app:argType="com.example.vuey.data.database.model.AlbumEntity" />
    </fragment>
    <fragment
        android:id="@+id/searchAlbumFragment"
        android:name="com.example.vuey.ui.screens.search.SearchAlbumFragment"
        android:label="fragment_search_album"
        tools:layout="@layout/fragment_search_album" >
        <argument
            android:name="searchQuery"
            app:argType="string" />
        <action
            android:id="@+id/action_searchAlbumFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.vuey.ui.screens.movie.MovieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" >
        <action
            android:id="@+id/action_movieFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_movieFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchMovieFragment"
        android:name="com.example.vuey.ui.screens.search.SearchMovieFragment"
        android:label="fragment_search_movie"
        tools:layout="@layout/fragment_search_movie" >
        <action
            android:id="@+id/action_searchMovieFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.vuey.ui.screens.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_searchAlbumFragment"
            app:destination="@id/searchAlbumFragment" />
        <action
            android:id="@+id/action_searchFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment" />
        <action
            android:id="@+id/action_searchFragment_to_searchMovieFragment"
            app:destination="@id/searchMovieFragment" />
        <action
            android:id="@+id/action_searchFragment_to_tvShowSearchFragment"
            app:destination="@id/tvShowSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/tvShowSearchFragment"
        android:name="com.example.vuey.ui.screens.search.TvShowSearchFragment"
        android:label="fragment_tv_show_search"
        tools:layout="@layout/fragment_tv_show_search" />
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.vuey.ui.screens.movie.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="searchMovie"
            app:argType="com.example.vuey.data.local.movie.search.SearchMovie" />
    </fragment>
</navigation>