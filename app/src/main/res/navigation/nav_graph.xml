<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/albumFragment">

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.example.vuey.feature_album.presentation.AlbumFragment"
        android:label="fragment_album"
        tools:layout="@layout/fragment_album" >
        <action
            android:id="@+id/action_albumFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment" />
        <action
            android:id="@+id/action_albumFragment_to_searchAlbumFragment"
            app:destination="@id/searchAlbumFragment" />
        <action
            android:id="@+id/action_albumFragment_to_statisticsAlbumFragment"
            app:destination="@id/statisticsAlbumFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="com.example.vuey.feature_album.presentation.DetailAlbumFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_album_detail">
        <argument
            android:name="album"
            app:argType="com.example.vuey.feature_album.data.remote.model.Album" />
        <argument
            android:name="albumEntity"
            app:argType="com.example.vuey.feature_album.data.local.entity.AlbumEntity" />
    </fragment>
    <fragment
        android:id="@+id/searchAlbumFragment"
        android:name="com.example.vuey.feature_album.presentation.SearchAlbumFragment"
        android:label="fragment_search_album"
        tools:layout="@layout/fragment_search_album" >
        <argument
            android:name="searchQuery"
            app:argType="string" />
        <action
            android:id="@+id/action_searchAlbumFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.vuey.feature_movie.presentation.MovieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" >
        <action
            android:id="@+id/action_movieFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
        <action
            android:id="@+id/action_movieFragment_to_searchMovieFragment"
            app:destination="@id/searchMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchMovieFragment"
        android:name="com.example.vuey.feature_movie.presentation.SearchMovieFragment"
        android:label="fragment_search_movie"
        tools:layout="@layout/fragment_search_movie" >
        <action
            android:id="@+id/action_searchMovieFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/tvShowSearchFragment"
        android:name="com.example.vuey.feature_tv_show.presentation.TvShowSearchFragment"
        android:label="fragment_tv_show_search"
        tools:layout="@layout/fragment_tv_show_search" >
        <action
            android:id="@+id/action_tvShowSearchFragment_to_tvShowDetailFragment"
            app:destination="@id/tvShowDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.vuey.feature_movie.presentation.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="searchMovie"
            app:argType="com.example.vuey.feature_movie.data.api.search.SearchMovie" />
        <argument
            android:name="movieEntity"
            app:argType="com.example.vuey.feature_movie.data.database.entity.MovieEntity" />
    </fragment>
    <fragment
        android:id="@+id/tvShowFragment"
        android:name="com.example.vuey.feature_tv_show.presentation.TvShowFragment"
        android:label="fragment_tv_show"
        tools:layout="@layout/fragment_tv_show" >
        <action
            android:id="@+id/action_tvShowFragment_to_tvShowSearchFragment"
            app:destination="@id/tvShowSearchFragment" />
        <action
            android:id="@+id/action_tvShowFragment_to_tvShowDetailFragment"
            app:destination="@id/tvShowDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/tvShowDetailFragment"
        android:name="com.example.vuey.feature_tv_show.presentation.TvShowDetailFragment"
        android:label="fragment_tv_show_detail"
        tools:layout="@layout/fragment_tv_show_detail" >
        <argument
            android:name="tvShow"
            app:argType="com.example.vuey.feature_tv_show.data.api.search.SearchTvShow" />
        <argument
            android:name="tvShowEntity"
            app:argType="com.example.vuey.feature_tv_show.data.database.entity.TvShowEntity" />
        <action
            android:id="@+id/action_tvShowDetailFragment_to_tvShowEpisodeFragment"
            app:destination="@id/tvShowEpisodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/tvShowEpisodeFragment"
        android:name="com.example.vuey.feature_tv_show.presentation.TvShowEpisodeFragment"
        android:label="fragment_tv_show_episode"
        tools:layout="@layout/fragment_tv_show_episode" >
        <argument
            android:name="tvShowId"
            app:argType="integer" />
        <argument
            android:name="seasonNumber"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/statisticsAlbumFragment"
        android:name="com.example.vuey.feature_album.presentation.StatisticsAlbumFragment"
        android:label="fragment_statistics_album"
        tools:layout="@layout/fragment_statistics_album" />
</navigation>